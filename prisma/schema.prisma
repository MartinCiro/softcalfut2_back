
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}


model Estado {
  id          Int     @id @default(autoincrement())  
  nombre      String  @unique @map("nombre_estado")
  descripcion String?

  usuarios    Usuario[]
  productos   Productos[]

  @@map("estado") 
}


model Origen {
  id          Int      @id @default(autoincrement())
  nombre      String @unique @map("nombre_origen")
  description String?

  productos   Productos[]
  @@map("origen_producto") 
}

model Permiso {
  id          Int     @id @default(autoincrement())  
  nombre      String @unique @map("nombre_permiso")
  descripcion String? 

  rolXPermiso RolXPermiso[]
  @@map("permiso") 
}


model Productos {
  id          Int       @id @default(autoincrement())
  nombre      String    @unique @map("nombre_producto")
  description String
  notas       String
  cantidad    Int
  id_origen   Int
  precio      Decimal
  id_estado   Int
  id_usuario  Int

  usuario     Usuario   @relation(fields: [id_usuario], references: [id])
  estado      Estado    @relation(fields: [id_estado], references: [id])
  origen_producto     Origen  @relation(fields: [id_origen], references: [id])

  @@map("productos") 
}

model Rol {
  id          Int     @id @default(autoincrement())  
  nombre      String @unique @map("nombre_rol")
  descripcion String?

  usuarios    Usuario[]       
  rolXPermiso RolXPermiso[]
  @@map("rol") 
}


model RolXPermiso {
  id_rol    Int
  id_permiso Int

  rol     Rol     @relation(fields: [id_rol], references: [id], onDelete: Cascade, onUpdate: Cascade)
  permiso Permiso @relation(fields: [id_permiso], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@id([id_rol, id_permiso])
  @@map("rol_x_permiso")      
}


model Usuario {
  id        Int    @id @default(autoincrement())
  username  String @unique @map("username")
  nombres   String
  apellidos String      
  pass      String                                 
  id_rol    Int
  id_estado Int

  rol    Rol    @relation(fields: [id_rol], references: [id], onDelete: Cascade, onUpdate: NoAction)
  estado Estado @relation(fields: [id_estado], references: [id])

  productos   Productos[]
  @@map("usuario") 
}
