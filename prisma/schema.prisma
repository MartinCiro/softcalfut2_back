
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}


model Estado {
  id          Int     @id @default(autoincrement())  
  nombre      String  @unique 
  descripcion String?

  usuarios    Usuario[]
  products   Productos[]
}


model Permiso {
  id          Int     @id @default(autoincrement())  
  nombre      String  @unique  
  descripcion String? 

  rolXPermiso RolXPermiso[]
}


model Productos {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  notes       String
  quantity    Int
  source_id   Int
  price       Decimal
  id_estado   Int
  id_usuario  Int

  usuario     Usuario  @relation(fields: [id_usuario], references: [id])
  estado      Estado   @relation(fields: [id_estado], references: [id])

  @@map("products") 
}

model Rol {
  id          Int     @id @default(autoincrement())  
  nombre      String  @unique  
  descripcion String?

  usuarios    Usuario[]       
  rolXPermiso RolXPermiso[]
}


model RolXPermiso {
  id_rol    Int
  id_permiso Int

  rol     Rol     @relation(fields: [id_rol], references: [id], onDelete: Restrict, onUpdate: Cascade)
  permiso Permiso @relation(fields: [id_permiso], references: [id], onDelete: Restrict, onUpdate: Cascade)

  @@id([id_rol, id_permiso])
  @@map("rol_x_permiso")      
}


model Usuario {
  id        Int    @id @default(autoincrement())
  username  String @unique @map("username")
  nombres   String
  apellidos String      
  pass      String                                 
  id_rol    Int
  id_estado Int

  rol    Rol    @relation(fields: [id_rol], references: [id], onDelete: Restrict, onUpdate: NoAction)
  estado Estado @relation(fields: [id_estado], references: [id])

  products   Productos[]
  @@map("usuario") 
}
