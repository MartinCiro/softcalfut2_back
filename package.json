{
  "name": "inventario-backend",
  "version": "1.0.0",
  "description": "Backend para mims",
  "main": "./src/index.ts",
  "scripts": {
    "dev": "npm-run-all --parallel gen server docs",
    "server": "nodemon ./src/index.ts",
    "docs": "aglio -i ./api-docs.apib -s --header 'Authorization' --prefix /api",
    "merge": "node prisma/mergeModels.js",
    "migrate": "npm run merge && npx prisma migrate dev --name init",
    "gen": "npx prisma generate",
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "mims"
  ],
  "author": "Martin Ciro",
  "license": "ISC",
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "testEnvironment": "node",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testMatch": [
      "**/?(*.)+(spec|test).[jt]s?(x)"
    ]
  },
  "dependencies": {
    "@nestjs/common": "^11.0.10",
    "@nestjs/core": "^11.0.10",
    "@nestjs/platform-express": "^11.0.10",
    "@nestjs/platform-fastify": "^11.0.10",
    "@nestjs/serve-static": "^5.0.3",
    "@prisma/client": "^6.4.1",
    "@types/jsonwebtoken": "^9.0.8",
    "axios": "^1.4.0",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express-static": "^1.2.6",
    "jsonwebtoken": "^9.0.2",
    "nats": "^2.29.2",
    "pg": "^8.11.0",
    "redis": "^4.7.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "uuid": "^9.0.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@nestjs/testing": "^11.0.11",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.2",
    "@types/pg": "^8.11.11",
    "aglio": "^2.3.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "prisma": "^6.4.1",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  }
}
